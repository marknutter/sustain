<style>
  .filter {
    height: 50px;
  }
</style>

<div id="filters">
  <!-- Slice & Dice content -->
  <div class="row">
    <div class="btn-group btn-group-justified" role="group" aria-label="...">
      <a id="filterByLane" class="btn btn-default">Lane</a>

      <a id="filterByDriver" class="btn btn-default">Driver</a>

      <a id="filterByTruck" class="btn btn-default">Truck</a>


    </div>
  </div>


  <div class="row" style="padding-top: 15px;">
    <div class="col-xs-12 filterByLane__options is-hidden">
      <form class="form-inline" action="/lanes" method="GET">
        <div class="form-group">
          <label for="from">From</label>
          <input type="text" class="form-control" id="from" placeholder="Minneapolis, MN">
        </div>
        <div class="form-group">
          <label for="to">To</label>
          <input type="text" class="form-control" id="to" placeholder="Austin, TX">
        </div>
        <button type="submit" class="btn btn-default">Filter</button>
      </form>
    </div>

    <div class="col-xs-12 filterByDriver__options is-hidden">
      <form class="form-inline" action="/drivers" method="GET">
        <div class="form-group">
          <label for="driverName">Driver Name</label>
          <input name="driverName" type="text" class="form-control" id="driverName" placeholder="John Doe">
        </div>
        <button type="submit" class="btn btn-default">Filter</button>
      </form>
    </div>


    <div class="col-xs-12 filterByTruck__options is-hidden">
      <form class="form-inline" action="/trucks" method="GET">
        <div class="form-group">
          <label for="truckId">Truck ID</label>
          <input type="text" class="form-control" id="truckId" placeholder="123456789">
        </div>
        <button type="submit" class="btn btn-default">Filter</button>
      </form>
    </div>
  </div>
</div>
<hr>
