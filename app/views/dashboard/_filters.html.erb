<div id="filters">
  <!-- Slice & Dice content -->
  <div class="row">
    <div id="filterByLane" class="col-md-2 col-sm-4 col-xs-6">
      <a>Filter By Lane</a>
    </div>

    <div id="filterByDriver" class="col-md-2 col-sm-4 col-xs-6">
      <a>Filter By Driver</a>
    </div>
    <div id="filterByCustomer" class="col-md-2 col-sm-4 col-xs-6">
      <a>Filter By Customer</a>
    </div>
    <div id="filterByTruck" class="col-md-2 col-sm-4 col-xs-6">
      <a>Filter By Truck</a>
    </div>
    <div class="col-md-2 col-sm-4 col-xs-6">
      <a href="/">Overview</a>
    </div>
  </div>
  

  <div class="row" style="padding-top: 15px;">
    <div class="col-xs-12 filterByLane__options is-hidden">
      <form class="form-inline">
        <div class="form-group">
          <label for="from">From</label>
          <input type="text" class="form-control" id="from" placeholder="Minneapolis, MN">
        </div>
        <div class="form-group">
          <label for="to">To</label>
          <input type="text" class="form-control" id="to" placeholder="Austin, TX">
        </div>
        <button type="submit" class="btn btn-default">Filter</button>
      </form>
    </div>

    <div class="col-xs-12 filterByDriver__options is-hidden">
      <form class="form-inline">
        <div class="form-group">
          <label for="driverName">Driver Name</label>
          <input type="text" class="form-control" id="driverName" placeholder="John Doe">
        </div>
        <button type="submit" class="btn btn-default">Filter</button>
      </form>
    </div>

    <div class="col-xs-12 filterByCustomer__options is-hidden">
      <form class="form-inline">
        <div class="form-group">
          <label for="customerName">Customer Name</label>
          <input type="text" class="form-control" id="customerName" placeholder="Customer Name">
        </div>
        <button type="submit" class="btn btn-default">Filter</button>
      </form>
    </div>


    <div class="col-xs-12 filterByTruck__options is-hidden">
      <form class="form-inline">
        <div class="form-group">
          <label for="truckId">Truck ID</label>
          <input type="text" class="form-control" id="truckId" placeholder="123456789">
        </div>
        <button type="submit" class="btn btn-default">Filter</button>
      </form>
    </div>
  </div>
</div>
<hr>
